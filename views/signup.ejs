<link rel="stylesheet" href="../assets/css/signup.css">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">

<form method="POST" action="/user/create">

    <div id="login-box">
        <div class="left">

          <p id="error"></p>
          <h1>Sign up</h1>
          
          <input type="text" name="username" placeholder="Username" onclick="this.placeholder=''" onblur="this.placeholder='Username'" required/>
          <input type="text" name="email" placeholder="E-mail" onclick="this.placeholder=''" onblur="this.placeholder='E-mail'" required/>
          <input  id="password" type="password" name="password" placeholder="Password" onclick="this.placeholder=''" onblur="this.placeholder='Password'" required/>
          <input id="confirm-password" type="password" name="password2" placeholder="Re-enter Password" onclick="this.placeholder=''" onblur="this.placeholder='Re-enter Password'" onkeyup="checkPassword();" required/>
          
          <input type="submit" name="signup_submit" value="Sign up" />

          <p id="go-to-signin">
            Already a user ? <a href="/user/sign-in">Log In</a>
          </p>
        </div>
        
        <div class="right">
          <span class="loginwith">Sign in with</span>
          
          <button class="social-signin facebook"><i class="fab fa-facebook"></i> &nbsp; Facebook</button>
          <button class="social-signin github"><i class="fab fa-github"></i> &nbsp; Github &nbsp; &nbsp; <span>.</span></button>
          <button class="social-signin google"><i class="fab fa-google"></i> &nbsp; Google &nbsp; &nbsp; <span>.</span></button>
        </div>
        <div class="or">OR</div>
    </div>

</form>

<script src="/assets/js/script.js"></script>