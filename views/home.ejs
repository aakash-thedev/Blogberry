                </form>

            </div>

            <section id="more-options"></section>

        </div>

        <!-- <span id="post-heading">Posts</span> -->

        <div id="new-feeds">
    
            <%- include('_postContainer') -%>
            
        </div>
    
    </section>

    <%- include('_friendsSection') %>

