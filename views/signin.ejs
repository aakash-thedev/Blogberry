<link rel="stylesheet" href="../assets/css/signin.css">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">

<form method="POST" action="user/create-session">

    <div id="login-box">
        <div class="main">
          <h1>Log In</h1>
          
          <input type="text" name="username" placeholder="Username" onclick="this.placeholder=''" onblur="this.placeholder='Username'"/>
          <input type="password" name="password" placeholder="Password" onclick="this.placeholder=''" onblur="this.placeholder='Password'"/>
          
          <input type="submit" name="signup_submit" value="Sign In" />

          <p id="go-to-signup">
              <a href="/user/sign-up">Create Account</a>
          </p>
        </div>
    </div>

</form>