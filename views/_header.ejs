<header id="header">

    <div id="logo-section">
        <a href="/logo-action">
            <img src="../assets/images/logo2.png" alt="logo" id="logo"> <span>Codemate</span>
        </a>
    </div>

    <% if (locals.user) { %>

        <div class="right-section">

            <li>
                <a href="/user/profile" id="user-name"> <%= locals.user.name %>   </a>
            </li>
            
            <li id="logout">
                <a href="/user/sign-out">Sign Out</a>
            </li>
            
        </div>

    <% } else { %>

        <div class="right-section">

            <li>
                <a href="/sign-in">Sign in</a>
            </li>
    
            <li>
                <a href="/sign-up">Create Account</a>
            </li>

        </div>
        
    <% } %> 
</header>