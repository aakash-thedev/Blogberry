<header id="header">

    <div id="logo">
        <img src="/assets/images/logo2.png" alt="logo"> Codemate
    </div>

    <% if (locals.user) { %>

        <li>
            <a href="/user/profile"><%= user.name %> </a> 
        </li>

        <li>
            <a href="/user/sign-out">Sign Out</a>
        </li>

    <% } else { %>

        <div id="right-section">

            <li>
                <a href="/user/sign-in">Sign In</a>
            </li>
    
            <li>
                <a href="/user/sign-up">Sign Up</a>
            </li>

        </div>
        
    <% } %> 
</header>