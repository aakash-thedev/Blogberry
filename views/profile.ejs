<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<link rel="stylesheet" href="/assets/css/user_profile.css">

<main>

    <div class="profile-cover">

        <div class="profile-cover-photo">
            <img src="" alt="">
        </div>
    
        <div class="profile-display-photo">
            <!-- Important point to notice profile_user.avatar is something like this /uploads/users/avatars/.... this will act as a route
                 so we have to create a route for it brooo !! -->
            <img src="<%= profile_user.avatar %>" alt="Profile Pic">
        </div>
    
        <div class="user-name">

            <h1><%= profile_user.name %></h1>

        </div>
    
        <span class="profile-bio"> Your Bio </span>
    
        <section class="utilities">
    
            <nav class="util-tabs">
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                  <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">About</button>
                </div>
            </nav>

              <% if (user.id == profile_user.id) { %>

                <button class="edit-profile" id="myBtn">Edit Profile &nbsp; <i class="fas fa-pen"></i></button>

              <% } %> 
    
        </section>
    
    </div>

    <% if (user.id == profile_user.id) { %>
        <!-- The Modal -->
        <div id="myModal" class="modal">

            <span class="update-header">

                <h3>Update Information</h3>
                <span class="close">&times;</span>

            </span>
            <!-- Modal content -->
            <div class="modal-content">

                <form action="/user/update/<%= user.id %>" method="POST" enctype="multipart/form-data">

                    <label for="name">Name</label> <br>
                        <input type="text" name="name" id="name" value="<%= user.name %>" placeholder="Your Name"> <br>

                    <label for="email">Email</label> <br>
                        <input type="email" name="email" id="email" value="<%= user.email %>" placeholder="Your Email"> <br>
                    
                    <label for="profile-pic">Profile Pic</label> <br>
                        <div class="profile-pic-upload-container">
                            <label class="profile-input-label">
                                <input type="file" name="avatar" class="file-input" id="file-input">
                                <i class="fas fa-plus-circle"></i>
                            </label>
                            <img src="<%= user.avatar %>" alt="" class="profile-photo-preview" id="profile-img-tag">
                        </div>


                    <button type="submit" id="update-btn">Update</button>
                
                </form>

            </div>
        
        </div>

    <% } %> 

    <section class="util-content">

        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
    
                <section class="about-section card">
                    <span style="display: block; border-bottom: 1px solid rgb(226, 226, 226);">About</span>

                    <div class="about-info-icon">
                        <img src="/assets/images/icons8-mail-50.png"> &nbsp; <small>Email</small>
                        <span class="about-info"> <%= profile_user.email %>  </span>
                    </div>

                    <div class="about-info-icon">
                        <img src="/assets/images/icons8-planner-50.png"> &nbsp; <small>DOB</small>
                        <span class="about-info"> <%= String(profile_user.dob).replace("'/'", " / ").replace("'/'", " / ") %>  </span>
                    </div>

                    <div class="about-info-icon">
                        <img src="/assets/images/icons8-new-job-50.png"> &nbsp; <small>Occupation</small>
                        <span class="about-info"> Not Added  </span>
                    </div>
                    
                </section>
    
            </div>
        </div>
    
    </section>

    <section class="user-posts">

        <%- include('_postContainer') %>

    </section>

</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
<script src="/assets/js/profileScript.js"></script>